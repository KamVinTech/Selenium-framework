<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Framework Suite" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="com.designpattern.utils.TestListener"/>
    </listeners>

    <!-- Cucumber Tests -->
    <test name="Cucumber Tests">
        <classes>
            <class name="com.designpattern.runners.TestNGCucumberRunner"/>
        </classes>
    </test>
    
    <!-- TestNG Tests -->
    <test name="TestNG Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.designpattern.tests.LoginTest">
                <methods>
                    <include name="testSuccessfulLogin"/>
                    <include name="testFailedLogin"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>